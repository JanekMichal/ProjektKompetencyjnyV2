<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/english_background"
    tools:context=".main_screen"

    >

    <Button
        android:id="@+id/main_screen_register"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:backgroundTint="#2D175B"
        android:elevation="20dp"
        android:onClick="register"
        android:text="Rejestracja"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/main_screen_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@+id/main_screen_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2D175B"
        android:onClick="login"
        android:text="Zaloguj"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

</RelativeLayout>